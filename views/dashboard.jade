doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=EDGE')
    meta(name='viewport', content='width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no')
    title #{title}
    meta(name='robots', content='noindex')
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/bootstrap-theme.min.css', rel='stylesheet')
    link(href='css/app.css?_=#{built}', rel='stylesheet')
  body
    main
        nav#nav.navbar.navbar-inverse.navbar-fixed-top.hide-account-buttons(ng-controller="MenuController as menu")
            .navbar-header
                button.navbar-toggle.collapsed(ng-click="menu.expandHamburger()")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#/", ng-class="{ active: activeTab === 'index' }") #{title}
            #navbar.navbar-collapse.collapse(ng-class="{ in : menu.hamburger }")
                user-menu
        #content(ui-view)
    script(src='js/jquery-3.2.0.min.js')
    script(src='js/moment.min.js')
    script(src='js/angular.min.js')
    script(src='js/angular-ui-router.min.js')
    script(src='js/app.min.js?_=#{built}')